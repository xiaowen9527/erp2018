.btn-box   
    min-width 800px 
.set_box
    height 76vh    
    .menu_box
        width 15%
    .set_info
        width 84%
        overflow hidden
        margin-right: 1vh
        .firstForm
            min-width: 1050px
            ul
                li
                    width: 23%
                    &.gui
                        width 50%
                        label 
                            width: 20%
                        .gui_num
                            width: 20%
                        input 
                            width: 40%
                .save
                    padding: 0 1vh
                    height: 3.5vh;
                    border: 0.1vh solid #d2d2d2;
                    background: none;
                    line-height: 3.5vh;
                    text-align: center;
                    border-radius: 0.5vh;
                    cursor: pointer; 
                    margin 1vh     
                .btn
                    border: 0.1vh solid #409eff !important
                    font-weight: bold;
                    color: #409eff;      


// 表格
.order_table
  width: 100%
  margin: 5px auto 0
  max-height: 550px
  overflow: hidden
  .el-button
    padding: 0.6vh 2vh
    margin-top: 0.4vh
    color: #409eff
    font-size: 1.6vh
    &.btn
      color: #d2d2d2

.container>>>th, .order_table>>>.el-table td, .el-table th
  padding: 0
.container>>>.info_form ul li, .container>>>.el-table .cell
  height: 4vh
  line-height: 4vh
  text-align: center
  font-size: 1.6vh
.container>>>.el-table__empty-block
  min-height: 3.5vh      

// 修改表格边框和表头背景色
.container>>>.el-table th
      background-color: #2d8cf0
      color: #FFF
.container>>>.el-table tr
    background-color: #f1f1f1
.container>>>.el-table, .container>>>tr, .container>>>td, .container>>>.el-table th
    border : 0.5px solid #ccc
.container>>>.el-table th
    border-left: 0
.container>>>.el-table th
    &:last-child
        border-right: 0
    &:first-child
        border-left: 1px solid #ccc