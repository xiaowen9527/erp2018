.set_box    
    min-width 1480px 
    .menu_box
        width 15%
        position: relative
        .searchYear
            position: absolute
            top 0
            width: 100%
        .el-menu
            position: absolute
            top: 4vh
            width: 100%
    .set_info
        width 85%
        .table
            width: 50vw
            float left
            min-width 700px
            .firstForm
                padding: .5vh
                ul
                    li
                        height 3.5vh
                        line-height: 3.5vh
                        width: 60%
                        label 
                            width: 10%
                        input 
                            width: 30%

                    button
                        height: 3.5vh;
                        border: 0.1vh solid #d2d2d2;
                        background: none;
                        line-height: 3.5vh;
                        text-align: center;
                        border-radius: 0.5vh;
                        cursor: pointer; 
                        margin-left: 1vh
                        padding: 0 2vh
                        &.btn
                            border: 0.1vh solid #409eff;
                            font-weight: bold;
                            color: #409eff;
        .banner
            width: 26vw
            float left
            margin: 2vh 0 2vh 1vh
            .swiper-container
                max-height: 75vh
                .swiper-slide
                    width: 80%
                    cursor pointer
                    img 
                        width 100%
.swiper-button-prev,.swiper-button-next
    width: 50px
    height 25px

.order_table
    width 99%
    margin 5px auto 0
    height 29.5vh
    .el-button
        padding .4vh 1vh
        margin-top 0.4vh
        border 0.1vh solid #409eff
        color #409eff
        float left
        &.btn
            border 0.1vh solid #d2d2d2
            color #d2d2d2             