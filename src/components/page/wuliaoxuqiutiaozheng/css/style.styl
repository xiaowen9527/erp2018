.btn-box
    min-width 800px
    label
        display block
        width 100px
        line-height 4.5vh
        text-align center
        float left


  

// 表格
.order_table
    width 99%
    min-width 1080px
    margin 5px auto 0
    height 74.5vh
    overflow: auto
    .el-button
        padding 0.6vh 1vh
        margin-top 0.4vh
        border 1px solid #d2d2d2
        color #d2d2d2
        &.btn
            // font-size: 1.6vh
            border 1px solid #409eff
            color #409eff
.container>>>th
    line-height: 5vh            
.container>>>th, .order_table>>>.el-table td, .el-table th
    padding 0
.container>>>.info_form ul li, .container>>>.el-table .cell
    line-height 4.3vh
    text-align center
    font-size 1.6vh
    word-break normal
    white-space nowrap !important
    text-overflow ellipsis !important
    overflow hidden !important
    cursor pointer
    font-size: 14px
// 鼠标覆盖显示全部内容
.container>>>.el-table .cell p
    width 100%
    line-height 4.3vh
    word-break normal
    white-space nowrap !important
    text-overflow ellipsis !important
    overflow hidden !important
    cursor pointer
    font-size: 14px
.container>>>.el-table__empty-block
    min-height 3.5vh
// 修改表格边框和表头背景色
.container>>>.el-table th
    background-color #2d8cf0
    color #FFF
.container>>>.el-table tr
    background-color #f1f1f1
.container>>>.el-table, .container>>>tr, .container>>>td, .container>>>.el-table th
    border 0.5px solid #ccc
.container>>>.el-table th
    border-left 0
.container>>>.el-table th
    &:last-child
        border-right 0
    &:first-child
        border-left 1px solid #ccc


.container>>>.el-dialog
    width 400px
    height 400px
.container>>>.el-dialog__body
    cursor pointer !important
    line-height 2.5vh
    font-weight bold
    padding 1vh 2vh
    height 340px
    overflow-y: auto
    .el-input
        width 80%
        float left
    button
        height 40px 
        width 55px
        text-align: center
        background #ffffff
        margin-left 10px  
        border 1px solid #409EFF
        color #409EFF
        padding: 0    
    li  
        :hover
            background: #d2d2d2
        span 
            padding-left: 2vh        

.container>>>.edit .el-dialog     
    height 500px
.container>>>.edit .el-dialog .el-dialog__body
    height 345px
.container>>>.edit .el-dialog .el-textarea
    width: 80%
.container>>>.edit .el-dialog .el-textarea textarea
    height 100px

.container>>>.oldmenu .el-dialog               
    height 580px !important
    width: 800px !important
    border: 1px solid red  !important
    overflow auto
.container>>>.oldmenu .el-dialog  .el-dialog__body
    height 430px
.container>>>.oldmenu .el-dialog  .el-dialog__body button
    height 28px    
.container>>>.oldmenu .el-dialog  .el-dialog__footer
    padding: 10px 20px
.container>>>th, .oldmenu>>>.el-table td, .el-table th
    padding 0    
.container>>>.oldmenu .info_form ul li, .container>>>.el-table .cell
    line-height 3.5vh
    text-align center
    font-size 1.6vh
    word-break normal
    white-space nowrap !important
    text-overflow ellipsis !important
    overflow hidden !important
    cursor pointer
    font-size: 14px
    padding: 0 .5vh
// 鼠标覆盖显示全部内容
.container>>>.oldmenu .el-table .cell p
    width 100%
    line-height 3.5vh
    word-break normal
    white-space nowrap !important
    text-overflow ellipsis !important
    overflow hidden !important
    cursor pointer
    font-size: 14px          