.btn-box
    min-width 800px



// 弹出框
.container>>>.el-dialog
    width 400px
    height 500px
.container>>>.el-dialog__body
    cursor pointer !important
    line-height 2.5vh
    font-weight bold
    padding 1vh 2vh
    height 340px
    overflow-y: auto
    .el-dialog__headerbtn
        border none
    .el-input
        width 80%
        float left
    button
        height 40px 
        width 60px
        background #ffffff
        margin-left 10px 
        border 1px solid #409EFF
        color #409EFF        
    li  
        :hover
            background: #d2d2d2

 
// 表格
.order_table
  width: 49%
  margin: 5px .5% 0
  float left
  overflow: hidden
  .el-button
    padding: 0.6vh 1vh
    margin-top: 0.4vh
    border: 1px solid #d2d2d2
    &.btn
        // font-size: 1.6vh
        border: 1px solid #409eff
      


.container>>>th, .order_table>>>.el-table td, .el-table th
  padding: 0
.container>>>.info_form ul li, .container>>>.el-table .cell
  height: 4vh
  line-height: 4vh
  text-align: center
  font-size: 1.6vh
  word-break normal
  white-space: nowrap!important;
  text-overflow: ellipsis!important;
  overflow: hidden!important;
//鼠标覆盖显示全部内容
.container>>>.el-table .cell p
  width 100%
  height 3.5vh
  line-height 3.5vh
  word-break normal
  white-space: nowrap!important;
  text-overflow: ellipsis!important;
  overflow: hidden!important;  
  cursor:pointer
.container>>>.el-table__empty-block
  min-height: 3.5vh

// 修改表格边框和表头背景色
.container>>>.el-table th
      background-color: #2d8cf0
      color: #FFF
.container>>>.el-table tr
    background-color: #f1f1f1
.container>>>.el-table, .container>>>tr, .container>>>td, .container>>>.el-table th
    border : 0.5px solid #ccc
.container>>>.el-table th
    border-left: 0
.container>>>.el-table th
    &:last-child
        border-right: 0
    &:first-child
        border-left: 1px solid #ccc                