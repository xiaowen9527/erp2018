// 查询内容label
.label_Info
    float left
    height: 4vh
    line-height: 4vh
    font-size: 1.4vh
    padding: 0 2vh
    margin: 0.3vh 0.3vh
// 查询内容
.queryInfo
    padding: 0 2vh
    height: 3.5vh
    line-height: 3.5vh
    border: 0.1vh solid #d9d9d9
    background: #ffffff
    margin: 0.3vh 0.3vh
    font-size: 1.4vh
    display: block
    float: left
    cursor: pointer
    border-radius: 4px

// 表格
.order_table
    width 99%
    min-width 1080px
    margin 5px auto 0
    height 74.5vh
    overflow: auto
    .el-button
        padding 0.6vh 1vh
        margin-top 0.4vh
        border 1px solid #d2d2d2
        color #d2d2d2
        &.btn
            // font-size: 1.6vh
            border 1px solid #409eff
            color #409eff
.container>>>th
    line-height: 5vh      
.container>>>th, .order_table>>>.el-table td, .el-table th
  padding: 0
.container>>>.info_form ul li, .container>>>.el-table .cell
    height 4.3vh
    line-height 4.3vh
    text-align center
    font-size 1.6vh
    word-break normal
    white-space nowrap !important
    text-overflow ellipsis !important
    overflow hidden !important
    cursor pointer
    font-size: 14px
// 鼠标覆盖显示全部内容
.container>>>.el-table .cell p
    width 100%
    height 4.3vh
    line-height 4.3vh
    word-break normal
    white-space nowrap !important
    text-overflow ellipsis !important
    overflow hidden !important
    cursor pointer
    font-size: 14px
.container>>>.el-table__empty-block
  min-height: 4.3vh

// 修改表格边框和表头背景色
.container>>>.el-table th
    background-color: #2d8cf0
    color: #FFF
.container>>>.el-table tr
    background-color: #f1f1f1
.container>>>.el-table, .container>>>tr, .container>>>td, .container>>>.el-table th
    border : 0.5px solid #ccc
.container>>>.el-table th
    border-left: 0
.container>>>.el-table th
    &:last-child
        border-right: 0
    &:first-child
        border-left: 1px solid #ccc