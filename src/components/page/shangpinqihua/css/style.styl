.set_box    
    min-width 1280px 
    .menu_box
        width 15%
        position: relative
        .searchYear
            position: absolute
            top 0
            width: 100%
        .el-menu
            position: absolute
            top: 4vh
            width: 100%
    .set_info
        width 85%
        .firstForm ul .save
            padding: 0 2vh
            height: 3.5vh;
            border: 0.1vh solid #d2d2d2;
            background: none;
            line-height: 3.5vh;
            text-align: center;
            border-radius: 0.5vh;
            cursor: pointer; 
            margin 1vh
            &.btn
                border: 0.1vh solid #409eff;
                font-weight: bold;
                color: #409eff;            
        .secondForm
            ul
                li      
                    button 
                        width: 4vh;
                        height: 3.5vh;
                        border: 0.1vh solid #d2d2d2;
                        background: none;
                        line-height: 3.5vh;
                        text-align: center;
                        border-radius: 0.5vh;
                        cursor: pointer; 
                        margin-left: .5vh 
                        &.btn
                            border: 0.1vh solid #409eff;
                            font-weight: bold;
                            color: #409eff;                                                            
                    &.category
                        width 50% !important
                        label 
                            width: 15%
                        input 
                            width: 24%
                            margin-left: .5vh
                            &.category_num
                                width: 12%
                    &.cloth
                        width: 30%
                        label 
                            width: auto
                            padding: 0 1vh  
                        input 
                            width: 40%
                            margin-left: .5vh
                            &.cloth_num
                                width: 18%   
                    &.old
                        width: 20%
                        label 
                            padding: 0 1vh 
                            &.old2
                                width: 20%  
                                padding: 0  
                                text-align: center  
                        input 
                            width: 50%   
                    &.yuan
                        label 
                            padding: 0 1vh   
                            &.yuan2
                                width: 20%  
                                padding: 0  
                                text-align: center
                        input 
                            width: 50%  
                    &.boduan
                        label 
                            width: 40%
                        input   
                            width: 60%                          
                    input 
                        height 3.5vh !important
                    .el-select
                        width 70%
                        display block
                        height 3.5vh
                        line-height: 3.5vh
                        float left                        
                .save
                    padding: 0 2vh
                    height: 3.5vh;
                    border: 0.1vh solid #d2d2d2;
                    background: none;
                    line-height: 3.5vh;
                    text-align: center;
                    border-radius: 0.5vh;
                    cursor: pointer; 
                    margin 1vh     
                    &.btn
                        border: 0.1vh solid #409eff;
                        font-weight: bold;
                        color: #409eff;                                            
.edit
    .el-form-item
        margin-bottom: 1vh
    .el-date-editor.el-input
        width: 90% !important
    .el-select
        width: 90%
    input 
        width: 90%
        height 3.5vh
        line-height: 3.5vh
        padding-left: 1vh
        &.category_num,&.cloth_num
            width 30% 
        &.category_inp,&.cloth_inp
            width: 50%
    .btn 
        width: 5vh   
        background: #ffffff
        border: 1px solid  #409eff
        color: #409eff  
        height 3.5vh
        border-radius: .4vh         
             